<?php
require_once("uc_oklink.pages.inc");
require_once("/lib/Oklink.php");

define ('OKLINK_WEBSITE', "http://localtest.oklink.com");
define ('OKLINK_BITCOIN_LOGO_PATH', base_path() . drupal_get_path('module', 'uc_oklink') . '/bitcoin-accepted.png');
define ('OKLINK_NOTIFY_URL', "uc_oklink/notifications");
define ('OKLINK_INVOICE_EXPIRATION_TIME', "10"); // in minutes; keep as a string

/**
 * Settings form for the oklink payment method module.
 * Not directly hooked into by Ubercart; called by
 * uc_payment_method_oklink()
 *
 * @return array
 */
function uc_oklink_settings_form()
{
    global $base_url;

    $form          = array();
    $form['general'] = array(
        '#type'        => 'fieldset',
        '#title'       => t('General settings'),
        '#collapsible' => FALSE,
        '#collapsed'   => FALSE,
    );
    $form['general']['uc_oklink_api_key'] = array(
        '#type'          => 'textfield',
        '#title'         => t('API Key'),
        '#default_value' => variable_get('uc_oklink_api_key', ''),
       );
    $form['general']['uc_oklink_api_secret'] = array(
        '#type'    => 'textfield',
        '#title'   => t('API Secret'),
        '#default_value' => variable_get('uc_oklink_api_secret', ''),
    );

    return $form;
}

/**
 * Implements hook_menu().
 *
 * @return array
 */
function uc_oklink_menu()
{
    // Always accessible, accepts POST data from oklink's servers
    // when being notified of status changes to an invoice.
    $items[OKLINK_NOTIFY_URL] = array(
        'title'           => 'oklink Notifications',
        'access callback' => TRUE,
        'page callback'   => 'uc_oklink_notification',
        'type'            => MENU_CALLBACK,
        'file'            => 'uc_oklink.pages.inc',
    );

    return $items;
}

/**
 * Display help and module information
 * @param path which path of the site we're displaying help
 * @param arg array that holds the current path as would be returned from arg() function
 * @return help text for the path
 */
function uc_oklink_help($path, $arg)
{
    $o = '';  // declare your output variable
    switch ($path)
    {
    case "admin/help#oklink":
        $o .= '<p>' . t('Implements the acceptance of bitcoin payments through the') . " oklink.com " . t('API.') . '</p>';
        break;
    }
    return $o;
} // end function - uc_oklink_help


/**
 * Implements hook_uc_payment_method().
 *
 * @return array
 */
function uc_oklink_uc_payment_method()
{

        $title = '<img src="' . OKLINK_BITCOIN_LOGO_PATH .
