/**
 * Implementation of hook_uc_order().
 *
 * @param $op
 * @param $arg1
 * @param $arg2
 */


function uc_oklink_uc_order($op, $order, $arg2)
{
    global $base_url;


    if (($order->payment_method == 'oklink') && (!variable_get('uc_oklink_debug_mode', 0) || 
        user_access('access administration menu')))
    {
        switch ($op)
        {

        case 'new':
        case 'save':
            break;
        case 'total':
            break;
        case 'load':      
            break;
        case 'submit':
            $client = Oklink::withApiKey(variable_get('uc_oklink_api_key',''),variable_get('uc_oklink_api_secret',''));

            if( variable_get('clean_url', '0') == 0 ){
                $callback_url = $base_url . '/?q=uc_oklink/notifications'; 
                $success_url  = $base_url . '/?q=cart/checkout'; 
            }else{
                $callback_url = $base_url . '/uc_oklink/notifications';
                $success_url  = $base_url . '/cart/checkout'; 
            }

            $site_url = variable_get('uc_oklink_base_url', $base_url);
            $params = array(
                        'name'           => 'Order #'.$order->order_id,
                        'price'          => uc_order_get_total($order),
                        'price_currency' => $order->currency,
                        'callback_url'   => $callback_url,
                        'success_url'    => $success_url,
                );
            $result = $client->buttonsButton($params);
            var_dump($result);
            if( $result && $result->button ){
                db_insert('uc_payment_oklink')
                    ->fields(array(
                        'button_id'    => $result->button->id,
                        'order_id'     => $order->order_id,
                    ))
                    ->execute();
            }
            break;
        } // end switch - check for order action taken
    } // end if - check to make sure payment method is 'oklink', etc.
} // end function - uc_oklink_uc_order

/**
 * Payment method callback for the oklink payment method
 *
 * @param $op
 * @param $order
 */
function uc_payment_method_oklink($op, &$order)
{
    switch ($op)
    {
    case 'settings':
        return uc_oklink_settings_form();
        break;

    case 'cart-details':
        $txt = '<br /><br />' . t('The price will be converted to bitcoins at the current to-the-minute exchange rate, and you will have') . ' ' . OKLINK_INVOICE_EXPIRATION_TIME . ' ' . t('minutes to send payment before the invoice expires.');
        return array('#markup' => $txt);
        break;
    case 'customer-view':
        if( $order->order_status == 'pending' ){
            $button_id = db_query("SELECT button_id FROM {uc_payment_oklink} WHERE order_id = :order_id", array(':order_id' => $order->order_id))->fetchField();
                // display the invoice ID, with a link to the url
            $url = OKLINK_WEBSITE.'/merchant/mPayOrderStemp1.do?buttonid='.$button_id;
            $txt =  '<a href="' . $url . '" target="_blank" class="form-submit">Pay It</a>';
            return array('#markup' => $txt);           
        } 

        break;
    }
} // end function - uc_payment_method_oklink

